.send{
  height: 100vh;
  background-color: #F2F2F2;
  position: relative;
}

.send_search{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.send_search_imag{
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: -1rpx;
  right: 24rpx;
  padding: 20rpx;
  z-index: 10;
}

.send_search input{
  width: 610rpx;
  height:72rpx;
  background-color: #ffffff;
  padding-left: 24rpx;
  padding-right: 65rpx;
}

.send_information{
  width: 100%;
  height: 192rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.send_info_tel{
  height: 91rpx;
  border-bottom: 1rpx solid #E5E5E5;
  padding-top: 22rpx;
  padding-left: 24rpx;
}

.send_info_edit{
  height: 78rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
}

.send_info_upper{
  display: flex;
  
  color: #999999;
  justify-content:space-between;
}

.send_info_lower{
  direction: rtl;
  padding-right: 24rpx;
}

.send_info_upper view{
  width: 50%;
}

.send_info_default{
  width: 50%;
  display: flex;
  padding-left: 24rpx;
}

.send_info_default view{
  margin-top: 4rpx;
  margin-left: 20rpx;
}

.send_info_operation{
  width: 50%;
  direction: rtl;
  color: #999999;
  display: flex;
  padding-right: 24rpx;
}

.send_info_operation image{
  width: 36rpx;
  height: 34rpx;
  margin: 4rpx 12rpx 0rpx 20rpx;
}

.send_info_radio{
  zoom: 80%;
}

.send_fd{
  height: 68rpx;
  position: absolute;
  width: 100%;
  bottom: 20rpx;
}

.send_fd button {
  width: 620rpx;
  height: 100%;
  line-height: 68rpx;
  border-radius: 0rpx;
  background-color: #FE7600;
  color: #ffffff;
  font-size: 24rpx;
}