page, .page, .page__bd {
  height: 100vh;
  background-color: #f2f2f2;
}

.order_navbar {
  background-color: #0d449d;
  color: #fff;
}

.order_content {
  background-color: #fff;
  margin-bottom: 20rpx;
  height: 240rpx;
  color: #999;
}

.order_up {
  padding: 0rpx 24rpx;
  height: 74rpx;
  line-height: 74rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.order_inif {
  height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order_inif_icon {
  width: 220rpx;
  height: 46rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}

.order_inif_send {
  height: 94rpx;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right: 20rpx;
  display: block;
  text-align: center;
}

.order_inif_send view {
  line-height: 40rpx;
}

.order_inif_conle {
  height: 94rpx;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 20rpx;
  display: block;
  text-align: center;
}

.order_inif_conle view {
  line-height: 40rpx;
}

.order_inif_adderss {
  color: #000;
}

.order_inif_name {
  font-size: 24rpx;
}

.order_time {
  padding: 0rpx 24rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}

.order_empty {
  position: relative;
}

.empty_image {
  width: 404rpx;
  height: 360rpx;
  position: absolute;
  top: 280rpx;
  left: 176rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty_image image {
  width: 266rpx;
  height: 268rpx;
}

.empty_image view {
  margin-top: 60rpx;
  color: #999;
  font-size: 32rpx;
}

.order_imag{
  margin: 20rpx 10rpx 0rpx 0rpx;
  width: 32rpx;
  height: 40rpx;
  float: left;
}
