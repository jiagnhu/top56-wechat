/**index.wxss**/

.my_container {
  height: 100vh;
  background-color: #f2f2f2;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 226rpx;
  background-color: #0d449d;
  background-image: url(http://118.31.54.90:8010/WinXinPic/ico_background@2x.png);
  background-size: 413rpx 188rpx;
  background-repeat: no-repeat;
  background-position: center;
}

.user_button {
  font-size: 24rpx;
  margin-top: 60rpx;
  background-color: #999;
  color: #333;
}

.userinfo-avatar {
  width: 158rpx;
  height: 158rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  height: 254rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}

.user-adderss {
  height: 84rpx;
  padding: 0rpx 24rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
}

.user-adderss image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 20rpx;
}

.user-oder {
  height: 82rpx;
  line-height: 82rpx;
  padding: 0rpx 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.user-oder image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 20rpx;
}
